<Window x:Class="RffaDataComparisonTool.Views.BatchExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RffaDataComparisonTool.Views"
        mc:Ignorable="d"
        Title="Batch Export" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- ValueConverter for boolean to visibility -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OptionalFieldStyle" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding UpdateExisting}" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                    <Setter Property="FontStyle" Value="Italic"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OptionalLabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding UpdateExisting}" Value="True">
                    <Setter Property="FontStyle" Value="Italic"/>
                    <Setter Property="Opacity" Value="0.7"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Add a style for TextBox to make it appear as optional -->
        <Style x:Key="OptionalTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding UpdateExisting}" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="BorderBrush" Value="#DDDDDD"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Export Batch File" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <!-- Description -->
        <TextBlock Grid.Row="1" 
                   Text="Create a batch file containing duplicate entries found in both the RFFA and IMP Top-up files. Please enter batch information below:"
                   TextWrapping="Wrap"
                   Margin="0,0,0,15"/>

        <!-- Batch Number -->
        <Grid Grid.Row="2" Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Batch Number:" 
                       Style="{StaticResource OptionalLabelStyle}"/>
            <TextBox Grid.Column="1" 
                     Text="{Binding BatchNumber, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource OptionalTextBoxStyle}"/>
        </Grid>

        <!-- Province -->
        <Grid Grid.Row="3" Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Province:" 
                       Style="{StaticResource OptionalLabelStyle}"/>
            <TextBox Grid.Column="1" 
                     Text="{Binding Province, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource OptionalTextBoxStyle}"/>
        </Grid>

        <!-- Municipality - NEW FIELD -->
        <Grid Grid.Row="4" Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Municipality:" 
                       VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" 
                     Text="{Binding Municipality, UpdateSourceTrigger=PropertyChanged}"
                     Height="30"
                     VerticalContentAlignment="Center"
                     Padding="5,0"/>
        </Grid>

        <!-- Update option -->
        <CheckBox Grid.Row="5" 
                  Content="Update existing batch file (adds a new sheet)" 
                  IsChecked="{Binding UpdateExisting, Mode=TwoWay}"
                  Margin="0,5,0,10"/>

        <!-- Optional fields note -->
        <TextBlock Grid.Row="6" Grid.ColumnSpan="2"
                   Visibility="{Binding UpdateExisting, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Text="Note: When updating an existing file, the batch number and province fields are optional."
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"
                   Foreground="Gray"
                   FontStyle="Italic"/>

        <!-- Existing file selection (visible only when UpdateExisting is checked) -->
        <Grid Grid.Row="7" Margin="0,5,0,15">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding UpdateExisting}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding UpdateExisting}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Existing file:" 
                       VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" 
                     Text="{Binding ExistingFilePath, Mode=OneWay}"
                     IsReadOnly="True"
                     Height="30"
                     VerticalContentAlignment="Center"
                     Padding="5,0"/>
            <Button Grid.Column="2"
                    Content="Browse"
                    Command="{Binding BrowseExistingFileCommand}"
                    Style="{StaticResource MainButtonStyle}"
                    Width="80"
                    Margin="10,0,0,0"/>
        </Grid>

        <!-- Buttons -->
        <UniformGrid Grid.Row="8" Columns="2" HorizontalAlignment="Center">
            <Button Content="Export" 
                    Command="{Binding ExportCommand}"
                    Style="{StaticResource MainButtonStyle}"
                    Width="120"
                    Background="#4CAF50"/>

            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource MainButtonStyle}"
                    Width="120"
                    Background="#9E9E9E"/>
        </UniformGrid>
    </Grid>
</Window>